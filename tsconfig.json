{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,// 开启所有严格的类型检查
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "__ROOT__/*": [
        "*"
      ]
    },
    "types": [
      "webpack-env",
      "node"
    ],
    "typeRoots": ["./typings"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
